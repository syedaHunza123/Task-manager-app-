<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Task Manager</title>
</head>
<body>
    <h1 class="text-center">Task Manager</h1>

    <!-- Add Task Form -->
    <form class="text-center" action="/add-task" method="POST">
        <input type="text" name="task" placeholder="Enter a new task" required>
        <button type="submit" class="btn btn-primary">Add Task</button>

    </form>

    <!-- Display Tasks -->
    <ul>
        <% tasks.forEach((task, index) => { %>
            <li>
                <%= task %>
                <!-- Delete Task -->
                <form action="/delete-task" method="POST" style="display:inline;">
                    <input type="hidden" name="index" value="<%= index %>">
                    <button type="submit" class="btn btn-dark">Delete</button>

                </form>
                <!-- Edit Task -->
                <form action="/edit-task" method="POST" style="display:inline;">
                    <input type="hidden" name="index" value="<%= index %>">
                    <input type="text" name="updatedTask" placeholder="Edit task">
                    <button type="submit" class="btn btn-outline-primary">Edit</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
